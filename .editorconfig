# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files for Adobe Acrobat (ECMAScript 5)
[*.js]
indent_style = tab
indent_size = 4
max_line_length = 120

# JSON files
[*.{json,json5}]
indent_style = tab
indent_size = 4
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
max_line_length = off
